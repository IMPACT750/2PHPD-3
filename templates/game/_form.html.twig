<form class="space-y-4 mx-auto max-w-sm">
	{{ form_start(form) }}
	<div class="form-group">
		{{ form_label(form.matchDate, 'Match Date', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.matchDate, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
	</div>
	<div class="form-group">
		{{ form_label(form.scorePlayer1, 'Score Player 1', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.scorePlayer1, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
	</div>
	<div class="form-group">
		{{ form_label(form.scorePlayer2, 'Score Player 2', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.scorePlayer2, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
	</div>
	<div class="form-group">
		{{ form_label(form.status, 'Status', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.status, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
	</div>
	<div class="form-group">
		{{ form_label(form.tournament, 'Tournament', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.tournament, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
	</div>
	<div class="form-group">
		{{ form_label(form.player1, 'Player 1', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.player1, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
	</div>
	<div class="form-group">
		{{ form_label(form.player2, 'Player 2', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.player2, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
	</div>
	<button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
		{{ button_label|default('Save') }}
	</button>
	{{ form_end(form) }}
</form>
