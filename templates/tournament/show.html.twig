{% extends 'base.html.twig' %}

{% block title %}Tournament
{% endblock %}

{% block body %}
	<h1 class="text-2xl font-bold mb-4">Tournament</h1>

	<table class="table-auto w-full border-collapse">
		<tbody>
			<tr class="border-b">
				<th class="px-4 py-2 text-left font-medium">Id</th>
				<td class="px-4 py-2">{{ tournament.id }}</td>
			</tr>
			<tr class="border-b">
				<th class="px-4 py-2 text-left font-medium">TournamentName</th>
				<td class="px-4 py-2">{{ tournament.tournamentName }}</td>
			</tr>
			<tr class="border-b">
				<th class="px-4 py-2 text-left font-medium">StartDate</th>
				<td class="px-4 py-2">{{ tournament.startDate ? tournament.startDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr class="border-b">
				<th class="px-4 py-2 text-left font-medium">EndDate</th>
				<td class="px-4 py-2">{{ tournament.endDate ? tournament.endDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr class="border-b">
				<th class="px-4 py-2 text-left font-medium">Location</th>
				<td class="px-4 py-2">{{ tournament.location }}</td>
			</tr>
			<tr class="border-b">
				<th class="px-4 py-2 text-left font-medium">Description</th>
				<td class="px-4 py-2">{{ tournament.description }}</td>
			</tr>
			<tr class="border-b">
				<th class="px-4 py-2 text-left font-medium">MaxParticipants</th>
				<td class="px-4 py-2">{{ tournament.maxParticipants }}</td>
			</tr>
			<tr class="border-b">
				<th class="px-4 py-2 text-left font-medium">Status</th>
				<td class="px-4 py-2">{{ tournament.status }}</td>
			</tr>
			<tr class="border-b">
				<th class="px-4 py-2 text-left font-medium">Game</th>
				<td class="px-4 py-2">{{ tournament.game }}</td>
			</tr>
		</tbody>
	</table>

	<div class="mt-4 flex justify-around">
		<a href="{{ path('app_tournament_index') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Back to list</a>
		<a href="{{ path('app_tournament_edit', {'id': tournament.id}) }}" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Edit</a>
		{{ include('tournament/_delete_form.html.twig') }}
	</div>
{% endblock %}
