{% extends 'base.html.twig' %}

{% block title %}Tournament index
{% endblock %}

{% block body %}
	<h1 class="text-2xl font-bold mb-4 text-center mx-auto mt-4">Tournament index</h1>

	<table class="table-auto w-full border-collapse">
		<thead>
			<tr class="bg-gray-200">
				<th class="px-4 py-2">Id</th>
				<th class="px-4 py-2">TournamentName</th>
				<th class="px-4 py-2">StartDate</th>
				<th class="px-4 py-2">EndDate</th>
				<th class="px-4 py-2">Location</th>
				<th class="px-4 py-2">Description</th>
				<th class="px-4 py-2">MaxParticipants</th>
				<th class="px-4 py-2">Status</th>
				<th class="px-4 py-2">Game</th>
				<th class="px-4 py-2">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for tournament in tournaments %}
				<tr class="border-b">
					<td class="px-4 py-2">{{ tournament.id }}</td>
					<td class="px-4 py-2">{{ tournament.tournamentName }}</td>
					<td class="px-4 py-2">{{ tournament.startDate ? tournament.startDate|date('Y-m-d H:i:s') : '' }}</td>
					<td class="px-4 py-2">{{ tournament.endDate ? tournament.endDate|date('Y-m-d H:i:s') : '' }}</td>
					<td class="px-4 py-2">{{ tournament.location }}</td>
					<td class="px-4 py-2">{{ tournament.description }}</td>
					<td class="px-4 py-2">{{ tournament.maxParticipants }}</td>
					<td class="px-4 py-2">{{ tournament.status }}</td>
					<td class="px-4 py-2">{{ tournament.game }}</td>
					<td class="px-4 py-2">
						<a href="{{ path('app_tournament_show', {'id': tournament.id}) }}" class="text-blue-500 hover:text-blue-700">Show</a>
						<a href="{{ path('app_tournament_edit', {'id': tournament.id}) }}" class="text-green-500 hover:text-green-700">Edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10" class="px-4 py-2 text-center">No records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_tournament_new') }}" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4">Create new</a>
{% endblock %}
