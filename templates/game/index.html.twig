{% extends 'base.html.twig' %}

{% block title %}Game index
{% endblock %}

{% block body %}

	<h1 class="text-2xl font-bold mb-4 text-center mx-auto mt-4">Game index</h1>

	<table class="table-auto w-full border-collapse">
		<thead>
			<tr class="bg-gray-200">
				<th class="px-4 py-2">Id</th>
				<th class="px-4 py-2">MatchDate</th>
				<th class="px-4 py-2">ScorePlayer1</th>
				<th class="px-4 py-2">ScorePlayer2</th>
				<th class="px-4 py-2">Status</th>
				<th class="px-4 py-2">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for game in games %}
				<tr class="border-b">
					<td class="px-4 py-2">{{ game.id }}</td>
					<td class="px-4 py-2">{{ game.matchDate ? game.matchDate|date('Y-m-d H:i:s') : '' }}</td>
					<td class="px-4 py-2">{{ game.scorePlayer1 }}</td>
					<td class="px-4 py-2">{{ game.scorePlayer2 }}</td>
					<td class="px-4 py-2">{{ game.status }}</td>
					<td class="px-4 py-2">
						<a href="{{ path('app_game_show', {'id': game.id}) }}" class="text-blue-500 hover:text-blue-700">Show</a>
						<a href="{{ path('app_game_edit', {'id': game.id}) }}" class="text-green-500 hover:text-green-700">Edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6" class="px-4 py-2 text-center">No records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_game_new') }}" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4">Create new</a>

{% endblock %}
